<xml>
  <global>
    <store_dir>equities_db/data_financial_statements/</store_dir>
    <list_db>equities_db/lists/</list_db>
    <!-- <log_dir>equities_db/data_20171113/retriver_</log_dir> -->
    <verbosity>0</verbosity>
  </global>

  <!--
      repeat="#1.#2".
      #1: a number
      #2: in [days, weeks, months, year]

      times="#1" (optional. If not given will go on for ever, negative number also will make it go on for ever).
      #1: a number

      example explaination, repeat this sequence after every 20seconds for 3 times in all.
  -->
  <execution repeat="4.weeks" times="10">
    <line>wsj_retriver</line>
    <line>wsj_parser</line>
    <line>wsj_inserter</line>
  </execution>

  <group id="wsj_retriver">
    <process>
      <type>retriver</type>
      <task>wsj</task>
      <exchange>xhkex,xsse,xszse</exchange>
    </process>

    <process>
      <type>retriver</type>
      <task>wsj</task>
      <exchange>xnse,xbse</exchange>
    </process>

    <process>
      <type>retriver</type>
      <task>wsj</task>
      <exchange>xnyse,xnasdaq,xamex</exchange>
    </process>

    <process>
      <type>retriver</type>
      <task>wsj</task>
      <exchange>xtyo</exchange>
    </process>

  </group>


  <group id="wsj_parser">
    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xhkex</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xsse</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xszse</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xnse</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xbse</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xnyse</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xnasdaq</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xamex</exchange>
    </process>

    <process>
      <type>parser</type>
      <task>wsj</task>
      <exchange>xtyo</exchange>
    </process>
  </group>

  <group id="wsj_inserter">
    <process>
      <type>inserter</type>
      <exchange>xhkex</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>

    <process>
      <type>inserter</type>
      <exchange>xsse</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>
    <process>
      <type>inserter</type>
      <exchange>xszse</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>

    <process>
      <type>inserter</type>
      <exchange>xnse</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>
    <process>
      <type>inserter</type>
      <exchange>xbse</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>

    <process>
      <type>inserter</type>
      <exchange>xnyse</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>
    <process>
      <type>inserter</type>
      <exchange>xnasdaq</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>
    <process>
      <type>inserter</type>
      <exchange>xamex</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>

    <process>
      <type>inserter</type>
      <exchange>xtyo</exchange>
      <args>--mongodb mongodb://localhost:27017</args>
    </process>
  </group>

</xml>
